{
  "compilerOptions": {
    "target": "es2022",
    "module": "ES2022",
    "moduleResolution": "bundler",
    "lib": [
      "es2020",
      "dom"
    ],
    "skipLibCheck": true,
    "jsx": "react-jsx",
    "strict": true,
    "declaration": true,
    "allowSyntheticDefaultImports": true,
    "experimentalDecorators": true,
    "emitDecoratorMetadata": true,
    "outDir": "dist",
    "typeRoots": [
      "node_modules/@types",
      "./types"
    ],
    "rootDir": "src",
    "isolatedModules": true,
    "baseUrl": ".",
    "paths": {
      "@/*": [
        "./src/*"
      ]
    },
    "plugins": [
      {
        "name": "@0no-co/graphqlsp",
        "schema": "./src/generated/gql/whisk/schema.graphql"
      }
    ]
  },
  "include": [
    "src"  
  ],
  "exclude": [
    "node_modules"
  ]
}
